@code {
    private List<ChatMessage> messages = new List<ChatMessage>();
    private string newMessage = "";

    [Parameter]
    public string SellerId { get; set; }
    private string userName;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (user.Identity.IsAuthenticated)
        {
            userName = user.Identity.Name;
        }
        else
        {
            userName = "Unknown";
        }
    }

    private async Task SendMessage()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        var senderId = Convert.ToInt32(user.FindFirstValue(ClaimTypes.NameIdentifier));
        var receiverId = Convert.ToInt32(SellerId);

        if (!string.IsNullOrWhiteSpace(newMessage))
        {
            messages.Add(new ChatMessage { Sender = userName, Content = newMessage });
            newMessage = "";

            // Save the message to the database
            DALMessage.InsertMessage(senderId, receiverId, newMessage);
        }
    }

    private void HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            SendMessage();
        }
    }

    private class ChatMessage
    {
        public string Sender { get; set; } = ""; // Default value to an empty string
        public string Content { get; set; }
    }
